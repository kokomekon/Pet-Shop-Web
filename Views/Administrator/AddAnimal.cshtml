@using PetShopWeb.Models;
@model Animals
@await Html.PartialAsync("~/Views/Shared/_Menu.cshtml", 3)

<h3>Add New Animal</h3>
<form asp-controller="Administrator" asp-action="AddAnimal" method="post" enctype="multipart/form-data">
	<div class="form-group">
		<label asp-for="Name">Name:</label>
		<input asp-for="Name" class="form-control" required />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Age">Age:</label>
		<input asp-for="Age" class="form-control" required />
		<span asp-validation-for="Age" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Description">Description:</label>
		<input asp-for="Description" class="form-control" required />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="PictureName">Select Photo:</label>
		<input type="file" id="PictureName" name="PictureName" class="form-control" accept=".png, .jpeg, .jpg" />
		<span asp-validation-for="PictureName" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="CategoryId">Category Name:</label>
		<select asp-for="CategoryId" id="CategoryName" class="form-control">
			<option value="">Select an existing category...</option>
			@foreach (var category in ViewBag.Categories)
			{
				<option value="@category.CategoryId">@category.Name</option>
			}
		</select>
		<span asp-validation-for="CategoryId" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Add Animal</button>

</form>

